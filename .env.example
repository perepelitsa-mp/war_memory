# ==============================================
# Книга Памяти Кавалерово - Environment Variables
# ==============================================
# Скопируйте этот файл в .env.development или .env.production
# и заполните значения переменных

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV=development
RESTART_POLICY=no

# ==============================================
# DATABASE (PostgreSQL)
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=war_memory
POSTGRES_PORT=5432

# ==============================================
# SUPABASE
# ==============================================
# Anon Key (публичный ключ для клиента)
SUPABASE_ANON_KEY=your-anon-key-here-generate-with-jwt-secret

# Service Key (секретный ключ для сервера)
SUPABASE_SERVICE_KEY=your-service-key-here-generate-with-jwt-secret

# JWT Secret (используется для подписи токенов, минимум 32 символа)
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# Site URL (адрес вашего сайта)
SITE_URL=http://localhost:3000

# Kong HTTP Port
KONG_HTTP_PORT=8000

# ==============================================
# POSTGREST (REST API)
# ==============================================
POSTGREST_PORT=3001
PGRST_DB_SCHEMA=public
PGRST_DB_ANON_ROLE=anon

# ==============================================
# GOTRUE (Authentication)
# ==============================================
GOTRUE_PORT=9999

# ==============================================
# REALTIME
# ==============================================
REALTIME_PORT=4000

# ==============================================
# STORAGE
# ==============================================
STORAGE_PORT=5000

# ==============================================
# STUDIO (Dev only)
# ==============================================
STUDIO_PORT=3010

# ==============================================
# MINIO (Object Storage)
# ==============================================
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# ==============================================
# VK OAUTH
# ==============================================
VK_OAUTH_ENABLED=false
VK_CLIENT_ID=your-vk-app-id
VK_CLIENT_SECRET=your-vk-app-secret
VK_REDIRECT_URI=http://localhost:3000/api/auth/callback/vk

# ==============================================
# EMAIL (SMTP)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_ADMIN_EMAIL=admin@yourdomain.ru
MAILER_AUTOCONFIRM=true

# ==============================================
# TELEGRAM BOT
# ==============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather

# ==============================================
# NGINX (Production only)
# ==============================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==============================================
# NEXT.JS (Frontend)
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=http://localhost:3001
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_VK_APP_ID=your-vk-app-id
NEXT_PUBLIC_2GIS_API_KEY=your-2gis-api-key

# ==============================================
# SENTRY (Optional - для мониторинга ошибок)
# ==============================================
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
